<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="60%w"
        app:layout_heightPercent="30%w"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/search_layout"
            android:clickable="true"
            android:onClick="imageOnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="12%w"
            app:layout_heightPercent="18%w"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iconfontsousuo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00caca"
                app:layout_textSizePercent="50%w"
                android:text="@string/popupwindow_search"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/yun_layout"
            android:clickable="true"
            android:onClick="imageOnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="17%w"
            app:layout_heightPercent="18%w"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iconfontyun" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00caca"
                app:layout_textSizePercent="33%w"
                android:text="@string/popupwindow_yun"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</merge>