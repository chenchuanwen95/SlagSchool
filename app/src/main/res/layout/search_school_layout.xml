<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00caca"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_image_goBye"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="9%w"
            app:layout_heightPercent="9%w"
            android:paddingLeft="10dip"
            android:layout_gravity="bottom"
            android:src="@drawable/iconfonthoutui"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.4"/>
        <TextView
            android:id="@+id/search_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="25%w"
            app:layout_heightPercent="8%w"
            app:layout_textSizePercent="3.5%"
            android:textColor="#ecf0f1"
            android:text="查找学校"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="0.5"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="80%w"
            app:layout_heightPercent="12%w"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:id="@+id/search_et"
            android:textColorHint="#5000caca"
            android:textColor="#00caca"
            android:background="@drawable/edittext_xuanzhong"
            android:hint="学校编号/学校名称"
            android:layout_weight="0.8" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%w"
            app:layout_heightPercent="12%w"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_textSizePercent="3.5%"
            android:textColor="@drawable/btn_textcolor"
            android:text="搜索"
            android:background="@drawable/btn_selector"
            android:id="@+id/search_btn"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
