<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="8dip"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ecf0f1"
        android:layout_marginBottom="2dp"
        app:layout_textSizePercent="5%w"
        android:text="请选择"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="60%w"
        app:layout_heightPercent="30%w"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/search_layout"
            android:clickable="true"
            android:onClick="imageOnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="12%w"
            app:layout_heightPercent="18%w"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iconfontsousuo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00caca"
                app:layout_textSizePercent="50%w"
                android:text="搜索"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
