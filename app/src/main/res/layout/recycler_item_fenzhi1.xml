<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_marginLeft="22dp"
    android:layout_marginTop="40dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="0.15">
        <ImageView android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/iconfontdingwei"/>
        <TextView android:id="@+id/dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ecf0f1"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:text="山东"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="0.2">
        <ImageView android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/iconfontzhongguojie"/>
        <TextView android:id="@+id/isguoban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#ecf0f1"
            android:textSize="12sp"
            android:text="国办高校"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="0.2">
        <ImageView android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/iconfontxuewei"/>
        <TextView android:id="@+id/xuexiaoxingzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#ecf0f1"
            android:textSize="12sp"
            android:text="普通专科"/>
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.2"/>
</LinearLayout >