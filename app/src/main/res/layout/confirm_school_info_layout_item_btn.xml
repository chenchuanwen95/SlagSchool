<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="70%w"
        app:layout_heightPercent="14%w"
        app:layout_marginTopPercent="1%w"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="45%w"
            app:layout_heightPercent="16%w"
            app:layout_textSizePercent="6%w"
            android:textColor="@drawable/btn_confirm_textcolor"
            android:text="@string/confirm_school_info_queren_btn"
            android:background="@drawable/edittext_xuanzhong"
            android:id="@+id/confirm_school_info_queren"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="45%w"
            app:layout_heightPercent="16%w"
            app:layout_textSizePercent="6%w"
            android:textColor="@drawable/btn_confirm_textcolor"
            android:text="@string/confirm_school_info_gobye_btn"
            android:background="@drawable/edittext_xuanzhong"
            android:id="@+id/confirm_school_info_gobye"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</merge>