<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="80%w"
            app:layout_heightPercent="12%w"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:id="@+id/search_et"
            android:textColorHint="#5000caca"
            android:textColor="#00caca"
            android:background="@drawable/edittext_xuanzhong"
            android:hint="@string/search_school_layout_content_id"
            android:layout_weight="0.8" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%w"
            app:layout_heightPercent="12%w"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_textSizePercent="3.5%"
            android:textColor="@drawable/btn_textcolor"
            android:text="@string/search_school_layout_content_search"
            android:background="@drawable/btn_selector"
            android:id="@+id/search_btn"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</merge>